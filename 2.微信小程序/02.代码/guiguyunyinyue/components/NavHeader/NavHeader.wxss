/* components/NavHeader/NavHeader.wxss */
/* header开始 */
.header .title{
  font-size:28rpx;
}

.header .moreContent{
  /*
    清除浮动:
      1.clear:both;
      2.给父元素添加高度
      3.开启BFC(块级格式化上下文)
        - overflow的值不为默认值
        - display:table||table-cell||inline-block等
        - position:absolute||fixed
        - 根元素html
        - float:left|right
  */

  overflow:hidden;
}

.header .moreContent .moreTitle{
  float:left;
  font-size:30rpx;
}

.header .moreContent .more{
  float:right;
  font-size:22rpx;
  border: 1rpx solid;
  border-radius:10rpx;
  padding:10rpx 20rpx;
}
/* header结束 */