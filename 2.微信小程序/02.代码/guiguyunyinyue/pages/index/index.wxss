/**index.wxss**/
.indexContainer .bannerSwiper{
  height:330rpx;
}

.indexContainer .bannerSwiper .bannerItem .bannerImg{
  width:100%;
  height:100%;
}

/* nav开始 */
.indexContainer .nav{
  display:flex;
  justify-content: space-around;
}

.indexContainer .nav .navItem{
  display:flex;
  flex-direction: column;
  text-align:center;
}

.indexContainer .nav .navItem .iconfont{
  font-size:50rpx;
  color:white;
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  border-radius:50%;
  margin:20rpx 0;
  background:rgba(240,16,16);
}

.indexContainer .nav .navItem .navTitle{
  font-size:28rpx;
}



/* nav结束 */

/* header开始 */
.header .title{
  font-size:28rpx;
}

.header .moreContent{
  /*
    清除浮动:
      1.clear:both;
      2.给父元素添加高度
      3.开启BFC(块级格式化上下文)
        - overflow的值不为默认值
        - display:table||table-cell||inline-block等
        - position:absolute||fixed
        - 根元素html
        - float:left|right
  */

  overflow:hidden;
}

.header .moreContent .moreTitle{
  float:left;
  font-size:30rpx;
}

.header .moreContent .more{
  float:right;
  font-size:22rpx;
  border: 1rpx solid;
  border-radius:10rpx;
  padding:10rpx 20rpx;
}
/* header结束 */

/* recommendContainer开始 */
.recommendContainer .recommendScroll {
  display:flex;
}

.recommendContainer .recommendScroll .recommendItem .recommendImg{
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx;
}

/* recommendContainer结束 */